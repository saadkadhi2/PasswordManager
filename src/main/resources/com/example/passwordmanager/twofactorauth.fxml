<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="300.0" style="-fx-background-color: #7a7d7d;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/19" fx:controller="com.example.passwordmanager.TwoFactorAuthController">
    <children>
        <Label layoutX="15.0" layoutY="46.0" prefHeight="40.0" prefWidth="270.0" text="Enter your 2FA Code" textFill="#f1f184">
         <font>
            <Font name="System Bold" size="28.0" />
         </font></Label>
        <TextField fx:id="twoFactorCodeField" layoutX="76.0" layoutY="97.0" promptText="Enter code" style="-fx-background-color: #545656;" />
        <Button fx:id="verifyButton" layoutX="125.0" layoutY="150.0" onAction="#verifyCode" style="-fx-background-color: #545656;" text="Verify" textFill="#f1f184">
         <font>
            <Font size="13.0" />
         </font></Button>
        <Label fx:id="warningLabel" alignment="CENTER" layoutX="55.0" layoutY="192.0" prefHeight="25.0" prefWidth="192.0" textAlignment="CENTER" textFill="#ee8c8c">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Label>
    </children>
</AnchorPane>
